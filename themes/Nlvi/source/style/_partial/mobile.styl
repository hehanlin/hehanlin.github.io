$bgStyle = hexo-config("mobile-header")
if $bgStyle == 'light'
    $backgroundColor = #fff
    $fontColor = $color-main
else
    $backgroundColor = $color-main
    $fontColor = #fff

.mobile-header
    display none
+mobile()
    .mobile-header
        // -webkit-filter blur(10px)
        // -ms-filter blur(10px)
        // filter blur(10px)
        z-index 50
        position fixed
        top -300px
        left 0
        right 0
        // height (@top*-1)
        height auto
        box-shadow 0px 2px 2px #c4c4c4
        display block
        .mobile-header-nav
            background-color $backgroundColor
            color $fontColor
            display flex
            flex-direction row
            align-items center
            min-height: 48px
            height 48px
            .mobile-header-item
                flex 0.5
                width 100%
                height 100%
                color inherit
                &.item-clicked
                  .header-menu-line
                    background-color transparent
                    &:before
                      top 0
                      transform rotate(45deg)
                    &:after
                      top 0
                      transform rotate(-45deg)
            .mobile-header-title
                flex 3
                text-align center
                margin 0.2rem
                color inherit
                a
                    font-family 'LedFont', cursive, 'Microsoft YaHei', sans-serif
                    text-decoration none
                    font-size 32px
                    color inherit
                    font-weight 200
                    line-height 1
        .mobile-header-body
            .mobile-header-list
                background-color $backgroundColor
                opacity 0.9
                box-sizing border-box
                padding (yard) 0
                .mobile-nav-item
                    position relative
                    box-sizing border-box
                    padding (yard) (yard*3)
                    a
                        text-decoration none
                        color $fontColor
                    .mobile-nav-tagcloud
                        position absolute
                        overflow-x auto
                        top (yard)
                        left (yard*3)
                        right (yard*3)
                        width 80%
                        transform: translateX(120%)
                        .mobile-tagcloud-inner
                            display inline-block
                            white-space nowrap
                            word-break:keep-all
                            a
                                margin 0 (yard/2)
                                &:before
                                    content: '#'

    .header-menu-item
        position relative
        padding 0 12px
        box-sizing border-box
        height 100%
        .header-menu-line
            position absolute
            top 50%
            background-color $fontColor
            height 1px
            width (yard*3)
            &:before
                content ''
                position absolute
                top -6px
                background-color $fontColor
                height 1px
                width (yard*3)
                transition: transform .3s
                transition: top .3s
            &:after
                content ''
                position absolute
                top 6px
                background-color $fontColor
                height 1px
                width (yard*3)
                transition-property top, transform
                transition-duration .3s
